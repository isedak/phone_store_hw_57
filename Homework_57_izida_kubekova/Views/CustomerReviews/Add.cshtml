@model CustomerReview

@{
    ViewBag.Title = "Добавить отзыв";
    Layout = "_Layout";
}
<div class="container pt-5">
    <div class="custom-container">
        <h2 class="text-center mb-3">Заполните поля</h2>
        <div class="row align-items-start justify-content-center">
            <div class="card bg-white mb-1">
                <div class="card-body">
                    <form asp-action="Add" asp-controller="CustomerReviews" method="post">
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="" class="col-sm-10 col-form-label">Имя покупателя</label>
                            <div class="col-sm-10">
                                <input disabled type="text" class="form-control" value="@Model.User.Name">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="Review" class="col-sm-10 col-form-label">Ваш отзыв:</label>
                            <div class="col-sm-10">
                                <span asp-validation-for="Review" class="warning-text text-center mb-3"></span>
                                <textarea rows="10" cols="50" asp-for="Review" type="text" class="form-control" id="Review"></textarea>
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="Rate" class="col-sm-10 col-form-label">Поставьте оценку (от 0 до 5)</label>
                            <div class="col-sm-10">
                                <span asp-validation-for="Rate" class="warning-text text-center mb-3"></span>
                                <select asp-for="Rate" class="form-control" aria-label="Default select example" id="Rate">
                                    <option selected></option>
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="" class="col-sm-10 col-form-label">Продукт</label>
                            <div class="col-sm-10">
                                <input disabled type="text" class="form-control" value="@Model.Phone.Name">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <input asp-for="PhoneId" type="hidden" value="@Model.Phone.Id">
                            <input asp-for="UserId" type="hidden" value="@Model.User.Id">
                            <button type="submit" class="btn btn-success">Оставить отзыв</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}