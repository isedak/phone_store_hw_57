@model CustomerReview

@{
    ViewBag.Title = "Удалить отзыв";
    Layout = "_Layout";
}

<div class="container pt-5">
    <div class="custom-container">
        <h6 class="warning-text text-center mb-4">Вы действительно хотите удалить отзыв на @Model.Phone.Name</h6>
        <h6 class="warning-text text-center mb-4">от @Model.User.Name?</h6>
        <form asp-action="Delete" asp-controller="CustomerReviews" asp-route-id="@Model.Id" method="post">
            <div class="py-5 mx-auto">
                <div class="btn-group-lg text-center">
                    <input type="submit" value="Да" class="btn btn-secondary">
                    <a class="btn btn-primary" asp-action="Index" asp-controller="CustomerReviews">Нет</a>
                </div>
            </div>
        </form>
    </div>
</div>
