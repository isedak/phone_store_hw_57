@model AddAndEditViewModel

@{
    ViewBag.Title = "Редактировать смартфон";
    Layout = "_Layout";
}

<div class="container pt-5">
    <div class="custom-container">
        <h2 class="text-center mb-3">Отредактируйте поля</h2>
        <div class="row align-items-start justify-content-center">
            <div class="card bg-white mb-1">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @{
                            await Html.RenderPartialAsync("PartialViews/PhoneFormPartial", Model);
                        }
                        <div class="row align-items-start justify-content-center mb-3">
                            <button type="submit" class="btn btn-primary">Изменить</button>
                        </div>
                        <input type="hidden" asp-for="@Model.Phone.Id">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}