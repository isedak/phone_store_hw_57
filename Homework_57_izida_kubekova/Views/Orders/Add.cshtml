@model Order

@{
    ViewBag.Title = "Заказать";
    Layout = "_Layout";
}

<div class="container pt-5">
    <div class="custom-container">
        <h2 class="text-center mb-3">Заполните форму для заказа</h2>
        <div class="row align-items-start justify-content-center">
            <div class="card bg-white mb-1">
                <div class="card-body">
                    <form asp-action="Add" asp-controller="Orders" method="post">
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="" class="col-sm-10 col-form-label">Имя покупателя</label>
                            <div class="col-sm-10">
                                <input disabled type="text" class="form-control" value="@Model.User.Name">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="Address" class="col-sm-10 col-form-label">Адрес доставки</label>
                            <div class="col-sm-10">
                                <span asp-validation-for="Address" class="warning-text text-center mb-3"></span>
                                <input asp-for="Address" type="text" class="form-control" id="Address">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="ContactPhone" class="col-sm-10 col-form-label">Номер телефона</label>
                            <div class="col-sm-10">
                                <span asp-validation-for="ContactPhone" class="warning-text text-center mb-3"></span>
                                <input asp-for="ContactPhone" type="text" class="form-control" id="ContactPhone">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="" class="col-sm-10 col-form-label">Продукт</label>
                            <div class="col-sm-10">
                                <input disabled type="text" class="form-control" value="@Model.Phone.Name">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <input asp-for="PhoneId" type="hidden" value="@Model.Phone.Id">
                            <input asp-for="UserId" type="hidden" value="@Model.User.Id">
                            <button type="submit" class="btn btn-success">Заказать</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>