@model List<Order>

@{
    ViewBag.Title = "Заказы";
    Layout = "_Layout";
}

<div class="container pt-5">
    <div class="custom-container">
        @if (Model.Count == 0)
        {
            <h2 class="text-center mb-3">Список пуст</h2>
        }
        else
        {
            <div class="row row-cols-1 justify-content-center row-cols-md-3 g-4">
                @foreach (var order in Model)
                {
                    <div class="col-md-4-custom mb-3">
                        <div class="card bg-white">
                            <div class="card-body">
                                <h5 class="card-title font-weight-bold text-center">@order.Phone.Name</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        Заказ № <span class="font-weight-bold">@order.Id</span>
                                    </li>
                                    <li class="list-group-item">
                                        Дата: <span class="font-weight-bold">@order.Date</span>
                                    </li>
                                    <li class="list-group-item ">
                                        Цена в USD: <span class="font-weight-bold">@order.Phone.Price</span>
                                    </li>
                                    <li class="list-group-item">
                                        Адрес доставки: <span class="font-weight-bold">@order.Address</span>
                                    </li>
                                    <li class="list-group-item">
                                        Покупатель: <span class="font-weight-bold">@order.User.Name</span>
                                    </li>
                                </ul>
                            </div>
                            @if (User.IsInRole("user"))
                            {
                                <div class="card-body text-center">
                                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-secondary ml-3">Отменить заказ</a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>