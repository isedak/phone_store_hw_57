@model List<User>

@{
    ViewBag.Title = "Пользователи";
    Layout = "_Layout";
}

<div class="container pt-5">
    <div class="custom-container">
        @if (Model.Count == 0)
        {
            <h2 class="text-center mb-3">Список пуст</h2>
        }
        else
        {
            <h2 class="text-center mb-3">Все пользователи</h2>
            <div class="col-sm-12">
                @foreach (var user in Model)
                {
                    <div class="card mb-2">
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <h5 class="card-title font-weight-bold">Email: @user.Email</h5>
                                </li>
                                <li class="list-group-item">
                                    Id: <span class="font-weight-bold">@user.Id</span> Имя <span class="font-weight-bold">@user.Name</span>
                                </li>
                                <li class="list-group-item">
                                    Пароль: <span class="font-weight-bold">@user.Password</span> Роль: <span class="font-weight-bold">@user.Role.Name</span>
                                </li>
                                <li class="list-group-item">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="card-link">Редактировать</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>