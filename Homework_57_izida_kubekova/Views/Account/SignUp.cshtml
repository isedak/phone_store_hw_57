@model RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

<div class="container pt-5">
    <div class="custom-container">
        <h2 class="text-center mb-3">Заполните поля</h2>
        <div class="row align-items-start justify-content-center">
            <div class="card bg-white mb-1">
                <div class="card-body">
                    <form asp-action="SignUp" method="post" asp-antiforgery="true">
                        <div class="row align-items-start justify-content-center mb-3">
                            <label asp-for="Email" class="col-sm-10 col-form-label"></label>
                            <div class="col-sm-10">
                                <span asp-validation-for="Email" class="warning-text text-center mb-3"></span>
                                <input asp-for="Email" class="form-control" id="Email">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label for="Name" class="col-sm-10 col-form-label">Имя</label>
                            <div class="col-sm-10">
                                <span asp-validation-for="Name" class="warning-text text-center mb-3"></span>
                                <input asp-for="Name" type="text" class="form-control" id="Name">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label asp-for="Password" class="col-sm-10 col-form-label"></label>
                            <div class="col-sm-10">
                                <span asp-validation-for="Password" class="warning-text text-center mb-3"></span>
                                <input asp-for="Password" class="form-control" id="Password">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <label asp-for="ConfirmPassword" class="col-sm-10 col-form-label">Повторите пароль</label>
                            <div class="col-sm-10">
                                <span asp-validation-for="ConfirmPassword" class="warning-text text-center mb-3"></span>
                                <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword">
                            </div>
                        </div>
                        <div class="row align-items-start justify-content-center mb-3">
                            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}